<Window x:Class="Skillbox_8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skillbox_8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="LayoutRoot">
        <ListBox ItemsSource="{Binding Items}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding DataContext.Employees}"
                            CommandParameter="{Binding}">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}"/>
                                <WrapPanel Margin="{StaticResource PhoneHorizontalMargin}">
                                    <TextBlock Text="{Binding ChannelsCount}"/>
                                    <TextBlock Text="{Binding AppResources.Channels, Source={StaticResource LocalizedStrings},Converter={StaticResource StringToLowercaseConverter}}"/>
                                </WrapPanel>
                            </StackPanel>
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox ItemsSource="{Binding Items}"
                 Grid.Column="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding DataContext.Depatrments}"
                            CommandParameter="{Binding}">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}"/>
                                <WrapPanel Margin="{StaticResource PhoneHorizontalMargin}">
                                    <TextBlock Text="{Binding ChannelsCount}"/>
                                    <TextBlock Text="{Binding AppResources.Channels, Source={StaticResource LocalizedStrings},Converter={StaticResource StringToLowercaseConverter}}"/>
                                </WrapPanel>
                            </StackPanel>
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
